{
  "name": "medicamentar-desktop",
  "title": "Medicamentar",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist-electron/main.js",
  "homepage": ".",
  "description": "App de gerência de medicações e exames",
  "author": {
    "name": "Medicamentar"
  },
  "paths": {
    "@*": [
      "src/*"
    ]
  },
  "scripts": {
    "start": "vite",
    "dev": "vite --mode development & wait-on tcp:3000 && electron .",
    "build": "tsc && vite build && electron-builder --config electron-builder.json5",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@mui/x-date-pickers": "^5.0.20",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "electron-store": "^10.0.0",
    "react": "^18.3.1",
    "react-datepicker": "^7.5.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "use-local-storage": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.medicamentar.medicamentar-desktop",
    "productName": "Medicamentar",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    }
  }
}
